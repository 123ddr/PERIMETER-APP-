<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="210dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Perimeter Calculator"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--square-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_square"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_margin="16dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                tools:ignore="ExtraText"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_square"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/square"
                />

                <TextView
                    android:id="@+id/info_square"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SQUARE" />


            </androidx.cardview.widget.CardView>

            <!--paralelogram-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_paralelogram"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_paralelogram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/parallelogram" />

                <TextView
                    android:id="@+id/info_paralelogram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PARALLELOGRAM" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--rectangle-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_rectangle"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                app:cardCornerRadius="10dp"
                android:layout_margin="16dp"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rectangel"
                     />


                <TextView
                    android:id="@+id/info_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RECTANGLE" />

            </androidx.cardview.widget.CardView>

            <!--rhombus-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_rhombus"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                app:cardCornerRadius="10dp"
                android:layout_margin="16dp"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_rhombus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rhombus"
                    />

                <TextView
                    android:id="@+id/info_rhombus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RHOMBUS" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--trapezoid-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_trapezoid"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                app:cardCornerRadius="10dp"
                android:layout_margin="16dp"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_trapezoid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trapezoid"
                    />

                <TextView
                    android:id="@+id/info_trapezoid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TRAPEZOID" />

            </androidx.cardview.widget.CardView>

            <!--triangle-->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_triangle"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                app:cardCornerRadius="10dp"
                android:layout_margin="16dp"> <!-- Add padding here -->

                <ImageView
                    android:id="@+id/image_triangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/traingle"
                    />

                <TextView
                    android:id="@+id/info_triangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TRIANGLE" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!--circle-->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_margin="16dp"> <!-- Add padding here -->

            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/circle"
                />
            <TextView
                android:id="@+id/info_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CIRCLE" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>